<div class="modal fade" id="login-modal-marketer" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="loginmodal-container">
            <h1>Welcome Back Marketer!</h1><br>

            <%= form_for(marketer_resource, as: marketer_resource_name, url: session_path(marketer_resource_name), html: { id: "user-login-form" }) do |f| %>

              <div class="form-group">
                  <%= f.email_field :email, type: "email", placeholder: "Email", required: true, id: "email_field", class: 'form-control' %>
              </div>

              <div class="form-group">
                  <%= f.password_field :password, type: "password", placeholder: "Password", required: true, id: "password_digest_field", class: 'form-control' %>
              </div>

              <div class="form-group text-center">
                  <%= f.submit "Login", type: "submit", class: "login loginmodal-submit" %>
              </div>

            <% end %>

            <div class="login-help">
                <a><%= link_to "Forgot Password", new_marketer_password_path %></a>
            </div>
            <div class="login-help">
                <a><%= link_to "Don't have account? Sign up here", new_marketer_registration_path %></a>
            </div>
        </div>
    </div>
</div>
