<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns">
  <h1 class="mbs text-center">Payment</h1>

  <%= "I would like to pay RM#{@price}" %>


  <%= form_for(:order, url: transactions_path, html: { id: 'payment-form'} ) do |f|%>
    <p>Please enter your payment details:</p>
    <div id="dropin"></div>
    <%= f.submit "Pay RM#{@price}", class: "button mt1" %>
  <%end%>
</div>

<script>
  braintree.setup("<%=@token%>", 'dropin', {
    container: 'dropin',
    form: 'payment-form'
  });
</script>
