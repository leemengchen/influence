<!DOCTYPE html>
<html>
  <head>
    <title>Influence</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://js.braintreegateway.com/v2/braintree.js', 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% unless controller_name == "dashboard" %>
      <div id="header">
        <%= render partial: 'partials/header' %>
      </div>
    <% end %>
      <%= render partial: "partials/flash_messages" %>
      <%= render partial: 'partials/login_influencer' %>
      <%= render partial: 'partials/login_marketer' %>
      <%= render partial: 'partials/sign_up' %>
    <%= yield %>

  </body>


  <footer>
  <div class="footer">
    <%= render partial: 'partials/footer' %>
  </div>
</footer>
</html>
