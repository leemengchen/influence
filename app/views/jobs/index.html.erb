<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Avatar</th>
      <th>Companyid</th>
      <th>Companyname</th>
      <th>Requirements</th>
      <th>Skills</th>
      <th>Due</th>
      <th>Viewcount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.avatar %></td>
        <td><%= job.companyId %></td>
        <td><%= job.companyName %></td>
        <td><%= job.requirements %></td>
        <td><%= job.skills %></td>
        <td><%= job.due %></td>
        <td><%= job.viewCount %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

