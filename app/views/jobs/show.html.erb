<html lang="en">
    <div class="container">
        <div class="row margin_top">
            <div class="col-lg-8">
                <!-- the actual blog post: title/author/date/content -->
                <h1>
                    <%= @job.title %>
                </h1>
                <p class="lead">
                    <i class="fa fa-user"></i>
                    by
                    <a href="#"><%= @job.marketer.companyName %></a>
                </p>
                <hr>
                <p>
                    <i class="fa fa-calendar"></i>
                    Posted on August 24, 2014 at 9:00 PM</p>
                <p>
                    <i class="fa fa-tags"></i>
                    Industry:
                    <a href="">
                        <span class="badge badge-info">Transportation</span>
                    </a>
                </p>

                <hr>
                <img src="<%= @job.background_image %>" class="img-resize img-responsive">
                <hr>

                <p class="lead"><%= @job.description %></p>

                <br/>
                <br/>
                <hr>
                <div id="comments">
                    <h4><%= @job.comments.count %>
                        Comments</h4>
                    <%= render @job.comments %>

                    <h4>Leave a comment</h4>
                    <%= render "comments/form" %>
                </div>
                <!-- the comment box -->

            </div>

            <div class="col-lg-4">
                <!-- /well -->
                <div class="well">
                    <h4>
                        <i class="fa fa-tags"></i>
                        Skills:</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <% @job.tag_list.each do |tag| %>
                                <li>
                                    <%= link_to tag, tag_path(tag), class: "badge badge-info" %>
                                </li>
                                <% end %>
                            </ul>
                        </div>
                        <!-- <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="">
                                        <span class="badge badge-info">Fluent English</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="badge badge-info">Basic Mandarin</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="badge badge-info">Stunt</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="">
                                        <span class="badge badge-info">Humors</span>
                                    </a>
                                </li>
                            </ul>
                        </div> -->
                    </div>
                </div>
                <!-- /well -->
                <div class="well">
                    <h4>
                        <i class="fa fa-fire"></i>
                        Requirements</h4>
                    <ul id="nameid">
                        <script type="text/javascript">
                            var mystring = '<%= @job.requirements %>';
                            mystring = '<li>' + mystring.replace(/##/gi, '</li><li>') + '</li>';
                            $('#nameid').html(mystring);
                        </script>
                    </ul>
                </div>
                <!-- /well -->

                <!-- /well -->
                <div class="well">
                    <h4>
                        <i class="fa fa-book"></i>
                        Featured Job:</h4>
                    <div class="row">
                        <% @jobs.each do |job| %>
                        <% if job.is_featured == true %>
                        <div class="col-lg-12">
                            <div class="cuadro_intro_hover " style="background-color:#cccccc;">
                                <p style="text-align:center; margin-top:20px;">
                                    <img src="http://placehold.it/500x330" class="img-responsive" alt="">
                                </p>
                                <div class="caption">
                                    <div class="blur"></div>
                                    <div class="caption-text">
                                        <h3 style="border-top:2px solid white; border-bottom:2px solid white; padding:10px;"><%= job.companyName %></h3>
                                        <p><%= job.title %></p>
                                        <button class="btn btn-default"><%= link_to "View Job", job_path(job.id)%></button>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <% end %>
                        <% end %>
                    </div>

                </div>
                <!-- /well -->
            </div>
        </div>

        <hr>






                    </div>
                    <!-- /.container -->

                    <!-- JavaScript -->
                    <script src="js/jquery-1.10.2.js"></script>
                    <script src="js/bootstrap.js"></script>

                </html>
